{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "$root/*": [
        "src/*"
      ],
      "$core/*": [
        "src/core/*"
      ],
      "$generated/*": [
        "src/generated/*"
      ],
      "$terms/*": [
        "src/terms/*"
      ],
      "$test/*": [
        "src/test/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "test",
    "webpack.config.js",
    "jest.config.ts"
  ]
}
