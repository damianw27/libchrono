{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "$root/*": [
        "src/*"
      ],
      "$core/*": [
        "src/core/*"
      ],
      "$generated/*": [
        "src/generated/*"
      ],
      "$terms/*": [
        "src/terms/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "webpack.config.js",
    "dist"
  ]
}
